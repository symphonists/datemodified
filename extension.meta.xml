<?xml version="1.0" encoding="UTF-8"?>
<extension id="datemodified" status="released" xmlns="http://getsymphony.com/schemas/extension/1.0">
    <name>Date Modified Field</name>
    <description>A simple extension of the built-in date field that will record the time an entry is saved. Can choose to display as an editable field, a disabled field, or not to display it at all.</description>
    <repo type="github">https://github.com/symphonists/datemodified</repo>
    <url type="discuss">http://getsymphony.com/discuss/thread/30443/</url>
    <types>
        <type>Field Types</type>
    </types>
    <authors>
        <author>
            <name github="symphonists" symphony="community">Symphony Community</name>
        </author>
    </authors>
    <releases>
        <release version="1.4.2" date="2018-04-08" min="2.3.x">
            * PHP7 compatibility
        </release>
        <release version="1.4.1" date="2014-10-31" min="2.3">
            * Use `Widget::Error` instead of `wrapFormElementWithError`
            * Other minor updates
        </release>
        <release version="1.4" date="2014-01-25" min="2.3">
            * Compatibility with Date Field introduced in 2.3
        </release>
        <release version="1.3" date="2012-09-24" min="2.3">
            * Symphony 2.3 compatibility
        </release>
        <release version="1.2.2" date="2011-05-06" max="2.2.5"/>
    </releases>
</extension>
